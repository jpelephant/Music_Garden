<h2>マイページ</h2>

<div class="container">
  <div class="row">
    <dv class="col-md-4">
      <h5>登録情報</h5>
    </dv>
    <div class="col-md-4">
      <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success"%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <table>
        <tr>
          <th>名前</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>名前（カナ）</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @customer.nickname %></td>
        </tr>
        <tr>
          <th>誕生日（年）</th>
          <td><%= @customer.birthday %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
</div>