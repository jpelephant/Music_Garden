<h3>レビューの詳細</h3>

<div class="container">
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <%= link_to "編集画面", admin_review_path(@review) %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <table>
        <tr>
          <th>曲名</th>
          <td><%= @reviwe.name %></td>
        </tr>
        <tr>
          <th>リリース</th>
          <td><%= @reviwe.year %></td>
        </tr>
        <tr>
          <th>グループ名</th>
          <td><%= @review.group_name %></td>
        </tr>
        <tr>
          <th>メンバー</th>
          <td><%= @reviwe.member %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <table>
        <tr>
          <th>感想</th>
        </tr>
        <tr>
          <td><%= @review.comment %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-9"></div>
    <div class="col-md-3">
      <table>
      <tr>
        <th>投稿者</th>
      </tr>
      <tr>
        <td>
          <% if @review.customer_id %>
          <%= @review.customer.nickname %>さん
          <% else %>
          <%= @review.admin.nickname %>さん
        </td>
      </tr>
    </table>
    </div>
  </div>
</div>