<div class="container">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <h3><strong>マイページ</strong></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <table>
        <tr>
          <th><strong>登録情報</strong></th>
          <th><%= link_to "編集する", edit_admin_path(@admin), class: "btn btn-success" %></th>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-6">
      <table>
        <tr>
          <th>ニックネーム</th>
          <td><%= @admin.nickname %></td>
        </tr>
        <tr>
          <th>誕生日</th>
          <td><%= @admin.birthday %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @admin.email %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
